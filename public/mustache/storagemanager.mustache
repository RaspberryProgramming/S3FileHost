<!doctype html>
<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <link href="/css/storageManager.css" rel="stylesheet" />
</head>

<body>

    <div class="togglebar" id="togglebar">
        <div class="previous" onclick="window.location.href='{{previous}}'">
            <img class="previous" src="/images/previous.png">
        </div>

        <button onclick="window.location.href='/logout'">Logout</button>

        <button id="tooltoggle" class="tooltoggle">Toggle</button>
    </div>
    <div class="content">

        <div class="files">{{{files}}}</div>
        <div class="tools" id="tools">
            <div id="section" class="section">
                <p>Upload</p>
                <form class="tool-form" id="upload-form" enctype="multipart/form-data" method="post"
                    action="/upload{{path}}">
                    <input class="fileupload" id="fileupload" name="myfile" type="file" />
                </form>
            </div>

            <div id="section" class="section">
                <p>Search</p>
                <input class="search" id="search" type="text" placeholder="Search.." onChange="search(this.value);" />
            </div>

            <div id="section" class="section">
                <p>Create Folder</p>
                <form class="tool-form" id="upload-form" enctype="multipart/form-data" method="post"
                    action="/upload{{path}}">
                    <input class="button" id="create-folder" name="folder" type="text" placeholder="Folder Name" />
                </form>
            </div>

            <div id="section" class="section">
                <p>File Options:</p>
                <button onclick="preview()">Preview</button>
                <button onclick="edit()">Edit</button>
                <button onclick="download()">Download</button>
            </div>
        </div>
</body>

</html>
<script src="https://cdn.jsdelivr.net/npm/vanilla-lazyload@12.4.0/dist/lazyload.min.js"></script>

<script src="/js/manager.js"></script>

